<div class="row">
    <form class="col s12" action="/new/book" method="post">
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Title of Book" id='title'  name="Title" value="" required='true' type="text" class="validate">
            </div>
            <div class="input-field col s6">
                <input id="page_count" placeholder="Number of Pages" name="Page_Count" required='true' value="" type="number" class="validate">

            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="language" placeholder="Programming Language" name="Programming_Languages" value="" type="text" class="validate">

            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="isbn" placeholder="isbn" type="number" name='ISBN' required='true' class="validate">

            </div>
        </div>
</div>

<button class="btn waves-effect waves-light"  type="submit">Add Book!
   <i class="material-icons right">send</i>
 </button>
</form>
</div>
